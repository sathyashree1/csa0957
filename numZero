import java.util.Scanner;
public class numzero {
    public static void main(String[]args){
        Scanner Scanner=new Scanner(System.in);
        System.out.println("enter the number:");
        int num= Scanner.nextInt();
        int sum=0;

        while(num!=0){
            if(num % 2 ==0){
                sum=num/2;
            System.out.println(sum);
            }
            else {
                sum=num-1;
                System.out.println(sum);
            }
            sum++;
        }
return;
    }
}
